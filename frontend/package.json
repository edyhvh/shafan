{
  "name": "shafan-frontend",
  "version": "1.0.0",
  "description": "Ultra-minimalist web interface for shafan - Hebrew New Testament digital edition",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run sync-data && next dev -p 3001",
    "build": "npm run sync-data && next build",
    "start": "next start -p 3001",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "sync-data": "node scripts/sync-data.cjs"
  },
  "dependencies": {
    "next": "^16.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.52.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.1.1",
    "postcss": "^8.4.40",
    "prettier": "^3.3.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
